<Window x:Class="Senri.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Senri"
        mc:Ignorable="d"
        Title="SJCWatch" Height="350" Width="525">
    <Grid>
        <TextBlock Name="text1" FontSize="32" Text="00:00:00" HorizontalAlignment="Center" VerticalAlignment="Top"></TextBlock>
        <DataGrid ItemsSource="{Binding dataSource}" MouseDoubleClick="DataGrid_MouseDoubleClick" Margin="0,48,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="テスト名" Binding="{Binding Behavior}"></DataGridTextColumn>
                <DataGridTextColumn Header="実行時間" Binding="{Binding Time}"></DataGridTextColumn>
                <DataGridTextColumn Header="曜日" Binding="{Binding Week}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="30, 10 0, 0" VerticalAlignment="Top" Click="Button_Click"></Button>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="90, 10 0, 0" VerticalAlignment="Top" Click="Button_Click"></Button>
    </Grid>
</Window>
